{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"-std=c++17",
				"-I./include",
				"-L./lib",
				"src/\\*.cpp",
				"src/glad.c",
				"-lglfw3dll",
				"-o",
				"${workspaceFolder}/myprogram.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}
	]
}